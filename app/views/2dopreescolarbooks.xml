				<Label id="pagesBlkLbl">80 páginas</Label>/Label>
				<Label id="countryBlkLbl">Colombia</Label>
				<Label id="typeBlkLbl">Poesía y juego de palabras</Label>
				<Label id="textField"></Label>
				<View id="space"></View>
			</ScrollView>
			<WebView id="webview" url="" />
		</View>
		<View id="bottomBar">
			<Button id="bookBtn"><Label id="bookLbl"></Label></Button>
			<Button id="searchBtn"><Label id="searchLbl"></Label></Button>
			<Button id="menuBtn" onClick="doClick"><Label id="menuLbl"></Label></Button>
		</View>
	</Window>
