<Alloy>
	<Window class="container" id="maternalbook">
		<View id="topBar"></View>
		<View id="content">
			<Button id="btnficha"onClick="openOne" ><Label id="btnfichaLbl">Ficha Técnica</Label></Button>
			<Button id="btnmuestra" onClick="openTwo"><Label id="btnmuestraLbl">Capítulo Muestra</Label></Button>
			<ScrollView id="scrollView" showVerticalScrollIndicator="true">
				<ImageView id="imagePortada" />
				<Label id="nameLbl">El hombresillo de la lluvia</Label>
				<Label id="autorBlkLbl">Autora</Label>/Label>
				<Label id="autorLbl">Yolanda Reyes</Label>
				<Label id="ilustradorBlkLbl">Ilustradora</Label>/Label>
